with "config/terrarium_tests_config.gpr";
with "config/terrarium_tests_list_config.gpr";

project Terrarium_Tests is
   for Source_Dirs use ("src/**", "common/", "config/");
   for Object_Dir use "obj/" & Terrarium_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use Terrarium_Tests_List_Config.Test_Files;

   package Compiler is
      for Default_Switches ("Ada") use
        Terrarium_Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;
end Terrarium_Tests;
